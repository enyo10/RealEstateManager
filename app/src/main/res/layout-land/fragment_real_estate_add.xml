                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/real_estate_pieces_number"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/real_estate_pieces_number_text_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@={DataConverter.convertIntToString(RealEstateViewModel.numberOfPieces)}"
                            android:hint="@string/number_of_pieces" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/real_estate_surface"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/real_estate_surface_text_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/surface"
                            android:inputType="numberDecimal"
                            android:text="@={DataConverter.convertDoubleToString(RealEstateViewModel.area)}" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/real_estate_description"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/real_estate_description_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@={RealEstateViewModel.description}"
                            android:inputType="textMultiLine"
                            android:hint="@string/description" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/real_estate_country"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/real_estate_country_text_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@={RealEstateViewModel.country}"
                            android:hint="@string/country" />
                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/real_estate_city_label"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/real_estate_city_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@={RealEstateViewModel.city}"
                            android:hint="@string/city_label" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/real_estate_zip"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/real_estate_zip_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@={DataConverter.convertIntToString(RealEstateViewModel.zip)}"
                            android:hint="@string/label_zip" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/real_estate_street"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".80"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/real_estate_street_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@={RealEstateViewModel.street}"
                            android:hint="@string/street" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/real_estate_street_number"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".20"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/real_estate_street_number_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@={RealEstateViewModel.streetNumber}"
                            android:hint="@string/street_number" />
                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/shopping_center"
                        style="@style/Widget.MaterialComponents.CompoundButton.CheckBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="@={RealEstateViewModel.shoppingCenterButtonChecked}"
                        android:text="@string/shopping_center" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/bus_station"
                        style="@style/Widget.MaterialComponents.CompoundButton.CheckBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="@={RealEstateViewModel.busStationButtonChecked}"
                        android:text="@string/bus_station" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/hospital"
                        style="@style/Widget.MaterialComponents.CompoundButton.CheckBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="@={RealEstateViewModel.hospitalButtonChecked}"
                        android:text="@string/hospital" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/school"
                        style="@style/Widget.MaterialComponents.CompoundButton.CheckBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="@={RealEstateViewModel.schoolButtonChecked}"
                        android:text="@string/school" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/sport_center"
                        style="@style/Widget.MaterialComponents.CompoundButton.CheckBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="@={RealEstateViewModel.sportCenterButtonChecked}"
                        android:text="@string/sport_center" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/park"
                        style="@style/Widget.MaterialComponents.CompoundButton.CheckBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="@={RealEstateViewModel.parkButtonChecked}"
                        android:text="@string/park" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/real_estate_price"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/real_estate_price_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@={DataConverter.convertDoubleToString(RealEstateViewModel.price)}"
                            android:inputType="number"
                            android:hint="@string/price" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <!-- RECYCLER VIEW -->
                <androidx.recyclerview.widget.RecyclerView

                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />


            </LinearLayout>


        </LinearLayout>


    </ScrollView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        app:menu="@menu/bottom_nav_menu"
        android:layout_alignParentBottom="true" />


</RelativeLayout>
</layout>