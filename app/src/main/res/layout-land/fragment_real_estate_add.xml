    <data>
        <import type="androidx.fragment.app.Fragment"/>
        <import type="android.view.View" />
        <import type="androidx.recyclerview.widget.RecyclerView"/>
        <variable
            name="RealEstateViewModel"
            type="com.openclassrooms.realestatemanager.management.views.RealEstateViewModel" />
        <variable
            name="DataConverter"
            type="com.openclassrooms.realestatemanager.utils.DataConverter" />
        <variable
            name="Type"
            type="com.openclassrooms.realestatemanager.models.Type" />
        <variable
            name="MyListener"
            type="com.openclassrooms.realestatemanager.utils.MyListener" />
    </data>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".management.addrealestate.RealEstateAddFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        tools:context=".management.activities.RealEstateRegistrationActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="16dp"
                android:textSize="20sp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="italic"
                android:text="@string/registration">

            </TextView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10sp"
                android:textSize="25sp"
                android:text="@string/type"
                android:textStyle="bold">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:padding="16dp">

               <!-- <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">-->

